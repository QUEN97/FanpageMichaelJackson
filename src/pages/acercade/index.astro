            src: url("/src/fonts/Blockt.ttf");
        }

        .font-custom {
            font-family: "Blockt", sans-serif; /* Usamos la fuente personalizada y luego una fuente de respaldo */
        }
        .hero__title::after {
            content: "";
            position: absolute;
            inset: 0;
            z-index: -1;
            transform: scale(2) translate(-50%, 0);
            opacity: 0.5;
            filter: blur(5rem);
        }
        .two {
            opacity: 0;
            transform: translateX(-100%);
            transition:
                opacity 0.5s ease,
                transform 0.5s ease;
        }

        .two.active {
            opacity: 1;
            transform: translateX(0);
        }

        /* Animación para la tercera sección (de derecha a izquierda) */
        .three {
            opacity: 0;
            transform: translateX(100%);
            transition:
                opacity 0.5s ease,
                transform 0.5s ease;
        }

        .three.active {
            opacity: 1;
            transform: translateX(0);
        }

        /* Animación para la cuarta sección (de arriba a abajo) */
        .four {
            opacity: 0;
            transform: translateY(-100%);
            transition:
                opacity 0.5s ease,
                transform 0.5s ease;
        }

        .four.active {
            opacity: 1;
            transform: translateY(0);
        }
