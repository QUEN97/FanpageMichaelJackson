---
const { title, subtitle, url, fondo, image} = Astro.props;

// Define TypeScript interface for props
interface Props {
  title: string;
  subtitle: string;
  url: string;
  fondo: string;
  image: string;
}
---

<section
    class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full parallax bg-no-repeat bg-cover bg-fixed"
    style={'background-image:url('+fondo+')'}>
<div class="mx-auto mb-6 w-full space-y-1 text-center sm:w-1/2 lg:w-1/3">
    <h2
      class="text-balance text-xl font-bold leading-tight text-[#AF822E] sm:text-3xl"
    >
      {title}
    </h2>
    
  </div>
    <div
        class="flex flex-col items-center justify-center gap-y-2 sm:flex-row sm:gap-x-12 sm:gap-y-0 lg:gap-x-24"
    >
        <div>
            <a href={url}>
                <img src={image} class="w-[250px]" alt="">
            </a>
        </div>
    </div>
    {
        subtitle && (
          <p class="text-sm text-pretty text-center text-neutral-300 dark:text-neutral-400">
            {subtitle}
          </p>
        )
      }
</section>
<style>
    .parallax{
    background-position: center top;
}
</style>
